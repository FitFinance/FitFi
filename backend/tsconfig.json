{
  "include": ["**/*.ts", "**/*.d.ts"],
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ESNext",
      "esModuleInterop": true,
      "skipLibCheck": true
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "test",
    "tests",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "target": "es2020",
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": false,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  }
}
