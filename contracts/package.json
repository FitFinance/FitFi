{
  "name": "fitfi-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for FitFi - Move-to-Earn Fitness Platform",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "build": "npx tsc",
    "deploy:localhost": "npx hardhat run scripts/deploy.ts --network localhost",
    "deploy:core-testnet": "npx hardhat run scripts/deploy.ts --network core_testnet",
    "deploy:core-testnet-2": "npx hardhat run scripts/deploy-core-testnet-2.js --network core_testnet_2",
    "deploy:holesky": "npx hardhat run scripts/deploy-holesky.ts --network holesky",
    "deploy:direct-commit": "npx hardhat run scripts/deploy-direct-commit.ts --network core_testnet_2",
    "verify:core-testnet": "npx hardhat run scripts/verify.ts --network core_testnet",
    "verify:core-testnet-2": "npx hardhat run scripts/testnet-verify.ts --network core_testnet_2",
    "verify:holesky": "npx hardhat run scripts/verify-holesky.ts --network holesky",
    "owner:holesky": "npx hardhat run scripts/get-owner-holesky.ts --network holesky",
    "transfer-owner:holesky": "npx hardhat run scripts/transfer-ownership-holesky.ts --network holesky",
    "addr:from-pk": "node scripts/derive-address.js",
    "interact:localhost": "npx hardhat run scripts/interact.ts --network localhost",
    "interact:core-testnet": "npx hardhat run scripts/interact.ts --network core_testnet",
    "test:direct-commit": "node scripts/test-direct-commit.js",
    "test:comprehensive": "node scripts/test-direct-commit.js",
    "node": "npx hardhat node",
    "clean": "npx hardhat clean && rm -rf dist",
    "test:coverage": "npx hardhat coverage",
    "lint": "npx hardhat check",
    "format": "npx prettier --write 'contracts/**/*.sol'"
  },
  "keywords": [
    "blockchain",
    "fitness",
    "move-to-earn",
    "core",
    "smart-contracts",
    "defi"
  ],
  "author": "FitFi Team",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.9",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/chai": "^4.3.20",
    "chai": "^4.5.0",
    "hardhat": "^2.24.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.3.0",
    "dotenv": "^16.5.0"
  }
}
